@model List<UserInfo>
	@{
	ViewBag.Title = "Toplanti katilimci listesi";
	}
	<main class="text-center">
		<h1 class="h4">Toplantiya katilim listesi</h1>
		<table class="table table-bordered">
			<thead>
				<tr>
					<td>Ad</td>
					<td>Email</td>
					<td>Katilim Durumu</td>
					<td>Detay</td>
				</tr>
			</thead>
			<tbody>

				@{int i = 0;}

				@foreach(var user in Model)
				{
				var durum = user.willAttend == true ? "Evet" : "Hayir";
				var className = user.willAttend == true ? "table-success" : "table-danger";
				if(user.willAttend == true){i++;}
				<tr class="@className">
					<td>@user.name</td>
					<td>@user.email</td>
					<td>@durum</td>
					<td><a class="btn btn-sm btn-primary" asp-action="details" asp-route-id="@user.Id">Detay</a></td>
				</tr>
				}
			</tbody>
		</table>
		<div class="card">
			<div class="card-body">
				<span>Katilimci sayisi @i</span>
			</div>
		</div>
	</main>